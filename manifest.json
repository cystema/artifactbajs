{
    "manifest_version": 2,
    "name": "Bajsed: Video Rotate and Invert",
    "version": "1.0",
    "description": "Rotates and inverts the color of the video element on the page when clicked.",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": "bajsed48.png",
      "default_title": "Rotate and Invert Video"
    },
    "icons": {
      "48": "bajsed48.png",
      "96": "bajsed96.png"
    }
  }
  